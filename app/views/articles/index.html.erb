<div class="container">
  <h1>
    Articles
    <% if user_signed_in? %>
      <%= link_to 'New article', new_article_path, class: "btn btn-link" %>
    <% end %>
  </h1>
 
  

<table class="table text-white bg-dark">
  <tr>
    <th>Title</th>
    <!-- <th>Content</th>-->
    <th>Category</th>
    
    <% if user_signed_in? %>
        <th></th>
        <th>Actions</th>
        <th colspan="3"></th>
      <% else %>
        <th>Actions</th>
        <!--th>Cant</th-->
    <% end %>
  
    
  </tr>
 
  <% @articles.each do |article| %>
    <tr>
      <td><%= article.title %></td>
      <!--<td><%= article.text %></td>-->
      <td><%= article.category %></td>
      <td><%= link_to 'Show', article_path(article), class: "btn btn-info" %></td>
      <% if user_signed_in? %>
        <td><%= link_to 'Edit', edit_article_path(article), class: "btn btn-info" %></td>
        <td><%= link_to 'Destroy', article_path(article),
                method: :delete,
                data: { confirm: '¿Estás seguro de eliminar el artículo?' },
                class: "btn btn-info" %></td>
      <% end %>
    </tr>
  <% end %>
  </table>
</div>

