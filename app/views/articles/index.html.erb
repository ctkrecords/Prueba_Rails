<div class="container">
  <h1>Articles</h1>
 
  <% if user_signed_in? %>
    <%= link_to 'New article', new_article_path%>
  <% end %>
<table class="table text-white bg-dark">
  <tr>
    <th>Title</th>
    <!-- <th>Content</th>-->
    <th>Category</th>
    <th colspan="3"></th>
  </tr>
 
  <% @articles.each do |article| %>
    <tr>
      <td><%= article.title %></td>
      <!--<td><%= article.text %></td>-->
      <td><%= article.category %></td>
      <td><%= link_to 'Show', article_path(article) %></td>
      <% if user_signed_in? %>
        <td><%= link_to 'Edit', edit_article_path(article) %></td>
        <td><%= link_to 'Destroy', article_path(article),
                method: :delete,
                data: { confirm: '¿Estás seguro de eliminar el artículo?' } %></td>
      <% end %>
    </tr>
  <% end %>
  </table>
</div>

