<div class="container">
  <div class="card text-dark bg-light mb-3 justify-content-center" style="max-width: 60rem;">
    <div class="card-header">
      <h2><%= @article.title %></h2>
    </div><!--card-header-->
  <div class="card-body">
    <p class="card-text"><%= @article.text %></p>
  </div><!--card-body-->
  <div class="card-footer btn">
    Tags: <%= @article.category %><br>
    <div class="btn"> 
    <% if user_signed_in? %>
      <%= link_to 'Edit', edit_article_path(@article) %> 
      |<% end %>
      <%= link_to 'Back', articles_path %>
    </div><!--btn-->
  </div><!--card-footer-->
  </div><!--card-->
  </div><!--container-->

<div class="container">
  <h4>Comments (<%= @article.comments.size %>)</h4>
  <div class="row">
    <%= render @article.comments %>
  </div>
</div>

<div class="container">
  <h4>Add a comment</h4>
  <%= render 'comments/form'%>
</div>


